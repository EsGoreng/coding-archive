            android:textStyle="bold"
            android:text="@string/fakultas_matematika_dan_ilmu_pengetahuan_alam"/>

        <TextView
            style="@style/normal_text"
            android:layout_marginTop="0dp"
            android:text="@string/jurusan_mtk_ukp"/>

        <TextView
            style="@style/normal_text"
            android:textStyle="bold"
            android:text="@string/fakultas_kedokteran"/>

        <TextView
            style="@style/normal_text"
            android:layout_marginTop="0dp"
            android:text="@string/pendidikan_dokter"/>

        <TextView
            style="@style/normal_text"
            android:textStyle="bold"
            android:text="@string/program_pascasarjana"/>

        <TextView
            style="@style/normal_text"
            android:layout_marginTop="0dp"
            android:text="@string/jurusan_pascarasrjan_unpas"/>

    </LinearLayout>

</ScrollView>